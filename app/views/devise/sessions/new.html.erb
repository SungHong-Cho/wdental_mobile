<div style="margin: 80px 0;">
<h2 style="text-align:center; margin: 50px 0;">로그 인</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: "form-horizontal", style: "width: 500px; margin: 0 auto;" }) do |f| %>
  <div class="control-group">
    <%= f.label :email, "아이디", class: "control-label" %>
    <div class="controls">
      <%= f.email_field :email, :autofocus => true %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :password, "비밀번호", class: "control-label" %>
    <div class="controls">
      <%= f.password_field :password %>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="control-group">
      <div class="controls">
        <label class="checkbox">
        <%= f.check_box :remember_me %> 로그인 정보를 기억합니다
        </label>
      </div>
    </div>
  <% end -%>

  <div style="text-align: center;"><%= f.submit "로그 인", class: "btn btn-large btn-primary" %></div>
<% end %>
</div>
