.span10
  %table.table.table-bordered
    %tbody
      %tr
        %th.span2 이름
        %td.span3= @consulting.name
        %th.span2 이메일
        %td.span3= @consulting.email
        %th.span2 날짜
        %td.span3= @consulting.date

        
      %tr
        %td.span10{ colspan: 8 }
          %h5 치아사진
          = image_tag @consulting.image_url if @consulting.image?
          %h5 내용
          = @consulting.comment
  %hr

  %div{ style: "text-align: center; word-spacing: 20px;" }
    = link_to "삭제", consulting_path(@consulting), method: "delete", class: "btn btn-large btn-danger"
    = link_to "뒤로", consultings_path, class: "btn btn-large btn-primary"
