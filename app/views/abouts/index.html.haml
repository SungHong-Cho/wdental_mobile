.span10
  %table.table
    %thead
      %tr
        %th.span1 우선순위
        %th.span1 활성화
        %th.span4 제목
        %th.span1 만든 날짜
        %th.span1 상태
    %tbody
      - @entries.each do |entry|
        %tr
          %td= entry.priority
          %td
            %i{class: ("icon-eye-open" if entry.visible)}
          %td{style: "text-align:left;"}
            = link_to entry.title, @path(entry)
          %td= entry.created_at.to_date
          %td
            .btn-group
              = link_to "수정", @edit_path(entry), class: "btn btn-mini btn-info"
              = link_to "삭제", entry, method: "delete", confirm: "삭제하시겠습니까?", class: "btn btn-mini btn-danger"
  %hr
  = link_to "새로 만들기", @new_path, class:"btn btn-primary"
  = link_to "소개화면 가기", @main_path, class:"btn btn-success pull-right"
