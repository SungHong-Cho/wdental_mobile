- content_for :js do 
  :javascript
    $(window).load(function() {
      var winw = $(window).width();
      var dong = document.getElementsByTagName("iframe");
      for(var i=0; i<dong.length;i++){
        dong[i].width = winw * 0.84;
        dong[i].height = dong[i].width * 9 / 16;
      }
    });

